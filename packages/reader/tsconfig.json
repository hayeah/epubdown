{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "types": [
      "node",
      "react",
      "react-dom",
      "bun",
      "yargs",
      "@testing-library/jest-dom"
    ],
    "paths": {
      "@epubdown/core": ["../core/src"],
      "@epubdown/core/*": ["../core/src/*"],
      "@hayeah/sqlite-browser": ["../sqlite-browser/src"],
      "@hayeah/sqlite-browser/*": ["../sqlite-browser/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../core" }, { "path": "../sqlite-browser" }]
}
