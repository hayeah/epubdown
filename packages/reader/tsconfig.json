{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": [
      "node",
      "react",
      "react-dom",
      "bun",
      "yargs",
      "@testing-library/jest-dom"
    ],
    "paths": {
      "@epubdown/core": ["../core/src"],
      "@epubdown/core/*": ["../core/src/*"],
      "@epubdown/pdf-render": ["../pdf-render/src"],
      "@epubdown/pdf-render/*": ["../pdf-render/src/*"],
      "@hayeah/sqlite-browser": ["../sqlite-browser/src"],
      "@hayeah/sqlite-browser/*": ["../sqlite-browser/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
